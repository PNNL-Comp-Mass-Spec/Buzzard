<UserControl x:Class="BuzzardWPF.Windows.WatcherConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:windows="clr-namespace:BuzzardWPF.Windows"
             d:DesignHeight="400"
             d:DesignWidth="1050"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="1,2" />
        </Style>

        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="6,4,4,4" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="MinHeight" Value="32" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="MinWidth" Value="300" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="MinHeight" Value="32" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="MinWidth" Value="300" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="0" Grid.IsSharedSizeScope="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="290" />
            <RowDefinition Height="20*" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="1" Grid.ColumnSpan="2">
            <Label Foreground="Black">
                <TextBlock Width="90"
                           Margin="0"
                           FontWeight="Regular"
                           Style="{StaticResource TextBlockStyle}"
                           Text="Comments" />
            </Label>
            <TextBox Margin="5" Text="{Binding Path=UserComments, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </DockPanel>

        <Grid Grid.Column="1" Margin="5,5,5,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="120" />
                <RowDefinition Height="140" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <GroupBox Grid.Row="0" Header="If No Request in DMS">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" SharedSizeGroup="A" />
                        <ColumnDefinition Width="auto" SharedSizeGroup="B" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Style="{StaticResource TextBlockStyle}"
                               Text="Experiment Name:" />

                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             IsEnabled="{Binding Path=IsNotMonitoring}"
                             Style="{StaticResource TextBoxStyle}"
                             Text="{Binding Path=ExperimentName,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}" />

                    <Button Grid.Row="1"
                            Grid.Column="1"
                            Width="186"
                            Margin="0,5.2,116,0"
                            HorizontalAlignment="Right"
                            Click="SelectExperiment_Click"
                            Content="Select Experiment..."
                            FontFamily="Arial"
                            IsEnabled="{Binding Path=IsNotMonitoring}"
                            Style="{StaticResource SimpleButtonStyle}" />
                </Grid>
            </GroupBox>

            <windows:EMSL_UsageSelectionView x:Name="EMSL_DataSelector"
                                             Grid.Row="1"
                                             IsEnabled="{Binding Path=IsNotMonitoring}" />

        </Grid>
        <StackPanel Grid.Column="0" Margin="1,1,4,1">

            <GroupBox FontWeight="Bold" Header="Mass Spectrometer Instrument">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" SharedSizeGroup="A" />
                        <ColumnDefinition Width="auto" SharedSizeGroup="B" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               FontWeight="Regular"
                               Style="{StaticResource TextBlockStyle}"
                               Text="Available Instruments:" />
                    <ComboBox Grid.Row="0"
                              Grid.Column="1"
                              FontWeight="Regular"
                              IsEnabled="{Binding Path=IsNotMonitoring}"
                              ItemsSource="{Binding Path=InstrumentsSource,
                                                    Mode=OneWay,
                                                    UpdateSourceTrigger=PropertyChanged}"
                              SelectedItem="{Binding Path=SelectedInstrument,
                                                     Mode=TwoWay,
                                                     UpdateSourceTrigger=PropertyChanged}"
                              Style="{StaticResource ComboBoxStyle}" />
                </Grid>
            </GroupBox>

            <GroupBox FontWeight="Bold" Header="Separation System">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" SharedSizeGroup="A" />
                        <ColumnDefinition Width="auto" SharedSizeGroup="B" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               FontWeight="Regular"
                               Style="{StaticResource TextBlockStyle}"
                               Text="Cart Name:" />
                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               FontWeight="Regular"
                               Style="{StaticResource TextBlockStyle}"
                               Text="Cart Configuration:" />
                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               FontWeight="Regular"
                               Style="{StaticResource TextBlockStyle}"
                               Text="Separation/Acquistion Type:" />
                    <TextBlock Grid.Row="3"
                               Grid.Column="0"
                               FontWeight="Regular"
                               Style="{StaticResource TextBlockStyle}"
                               Text="Dataset Type:" />
                    <TextBlock Grid.Row="4"
                               Grid.Column="0"
                               FontWeight="Regular"
                               Style="{StaticResource TextBlockStyle}"
                               Text="LC Column:" />

                    <TextBlock Grid.Row="5"
                               Grid.Column="0"
                               FontWeight="Regular"
                               Style="{StaticResource TextBlockStyle}"
                               Text="Operator" />

                    <ComboBox Grid.Row="0"
                              Grid.Column="1"
                              FontWeight="Regular"
                              IsEnabled="{Binding Path=IsNotMonitoring}"
                              ItemsSource="{Binding Path=CartNameListSource,
                                                    Mode=OneWay,
                                                    UpdateSourceTrigger=PropertyChanged}"
                              SelectedItem="{Binding Path=SelectedCartName,
                                                     Mode=TwoWay,
                                                     UpdateSourceTrigger=PropertyChanged}"
                              Style="{StaticResource ComboBoxStyle}" />
                    <ComboBox Grid.Row="1"
                              Grid.Column="1"
                              FontWeight="Regular"
                              IsEnabled="{Binding Path=IsNotMonitoring}"
                              ItemsSource="{Binding Path=CartConfigNameListSource,
                                                    Mode=OneWay,
                                                    UpdateSourceTrigger=PropertyChanged}"
                              SelectedItem="{Binding Path=SelectedCartConfigName,
                                                     Mode=TwoWay,
                                                     UpdateSourceTrigger=PropertyChanged}"
                              Style="{StaticResource ComboBoxStyle}" />
                    <ComboBox Grid.Row="2"
                              Grid.Column="1"
                              FontWeight="Regular"
                              IsEnabled="{Binding Path=IsNotMonitoring}"
                              ItemsSource="{Binding Path=SeparationTypeSource,
                                                    Mode=OneWay,
                                                    UpdateSourceTrigger=PropertyChanged}"
                              SelectedItem="{Binding Path=SelectedSeparationType,
                                                     Mode=TwoWay,
                                                     UpdateSourceTrigger=PropertyChanged}"
                              Style="{StaticResource ComboBoxStyle}" />
                    <ComboBox Grid.Row="3"
                              Grid.Column="1"
                              FontWeight="Regular"
                              IsEnabled="{Binding Path=IsNotMonitoring}"
                              ItemsSource="{Binding Path=DatasetTypesSource,
                                                    Mode=OneWay,
                                                    UpdateSourceTrigger=PropertyChanged}"
                              SelectedItem="{Binding Path=SelectedDatasetType,
                                                     Mode=TwoWay,
                                                     UpdateSourceTrigger=PropertyChanged}"
                              Style="{StaticResource ComboBoxStyle}" />


                    <Grid Grid.Row="4" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="m_LCColumn"
                                 Grid.Column="0"
                                 Margin="2"
                                 FontWeight="Regular"
                                 IsEnabled="{Binding Path=IsNotMonitoring}"
                                 Text="{Binding Path=LCColumn,
                                                Mode=TwoWay,
                                                UpdateSourceTrigger=PropertyChanged}" />

                        <ComboBox x:Name="LCColumnSelector"
                                  Grid.Column="1"
                                  Margin="2"
                                  FontWeight="Regular"
                                  IsEnabled="{Binding Path=IsNotMonitoring}"
                                  ItemsSource="{Binding Path=LCColumnSource,
                                                        Mode=OneWay,
                                                        UpdateSourceTrigger=PropertyChanged}"
                                  SelectionChanged="LCColumnSelector_SelectionChanged" />

                    </Grid>

                    <ComboBox Grid.Row="5"
                              Grid.Column="1"
                              FontWeight="Regular"
                              IsEnabled="{Binding Path=IsNotMonitoring}"
                              ItemsSource="{Binding Path=OperatorsSource,
                                                    Mode=OneWay,
                                                    UpdateSourceTrigger=PropertyChanged}"
                              SelectedItem="{Binding Path=SelectedOperator,
                                                     Mode=TwoWay,
                                                     UpdateSourceTrigger=PropertyChanged}"
                              Style="{StaticResource ComboBoxStyle}" />
                </Grid>
            </GroupBox>

        </StackPanel>
    </Grid>
</UserControl>
