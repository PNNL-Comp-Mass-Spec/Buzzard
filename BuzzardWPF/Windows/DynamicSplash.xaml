<Window x:Class="BuzzardWPF.Windows.DynamicSplash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Background="{x:Null}"
		ResizeMode="NoResize"
		ShowInTaskbar="True"
		SnapsToDevicePixels="True"
		Topmost="True"
		UseLayoutRounding="True"
		WindowStartupLocation="CenterScreen"
		WindowStyle="None"
        Title="DynamicSplash" 
		Height="500" Width="809">
	
	<Window.Resources>
		<Style x:Key="TextBlockStyle" TargetType="TextBlock">
			<Setter Property="FontFamily" Value="Calibri"/>
			<Setter Property="VerticalAlignment" Value="Center"/>
			<Setter Property="HorizontalAlignment" Value="Center"/>
			<Setter Property="Margin" Value="20 10"/>
		</Style>
	</Window.Resources>
	
	<Border BorderBrush="Maroon" 
			BorderThickness="10"
			Background="White">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<Image Source="{Binding Path=LogoImageSource, 
									Mode=OneWay, 
									UpdateSourceTrigger=PropertyChanged, 
									FallbackValue={StaticResource LogoImageSource}}"/>
			<TextBlock Grid.Row="1" 
					   Style="{StaticResource TextBlockStyle}"
					   FontSize="22">
				<Run Text="Version: "/>
				<Run Text="{Binding Path=Version, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
			</TextBlock>
			
			<TextBlock Grid.Row="2" 
					   Style="{StaticResource TextBlockStyle}"
					   FontSize="22"
					   Foreground="#006600">
				<Run Text="Instrument: "/>
				<Run Text="{Binding Path=InstrumentName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
			</TextBlock>
			
			<TextBlock Grid.Row="3"
					   Style="{StaticResource TextBlockStyle}"
					   MaxWidth="350" 
					   TextWrapping="WrapWithOverflow"
					   FontSize="12">
				Brian LaMarche, Danny Orton, Tom Metz, Gary Kiebel, Ron Moore, Gordon Anderson, Richard Smith, Francisco T. Chavez
			</TextBlock>
			
			<TextBlock Grid.Row="4"
					   Style="{StaticResource TextBlockStyle}"
					   TextWrapping="WrapWithOverflow"
					   FontSize="16"
					   FontWeight="Bold"
					   Text="{Binding Path=LastLoggedItem, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, FallbackValue='Sample Text'}"/>
		</Grid>
	</Border>
</Window>
