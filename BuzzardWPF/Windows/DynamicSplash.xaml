<Window x:Class="BuzzardWPF.Windows.DynamicSplash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DynamicSplash"
        Width="809"
        Height="500"
        Background="{x:Null}"
        ResizeMode="CanMinimize"
        ShowInTaskbar="True"
        SnapsToDevicePixels="True"
        Topmost="False"
        UseLayoutRounding="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">

    <Window.Resources>
        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Calibri" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="20 10" />
        </Style>
    </Window.Resources>

    <Border Background="White"
            BorderBrush="Maroon"
            BorderThickness="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="63*" />
                <RowDefinition Height="63*" />
                <RowDefinition Height="63*" />
                <RowDefinition Height="44*" />
                <RowDefinition Height="18*" />
            </Grid.RowDefinitions>

            <Image Margin="0,0,-0.2,0" Source="{Binding Path=LogoImageSource, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, FallbackValue={StaticResource LogoImageSource}}" />
            <TextBlock Grid.Row="1"
                       Width="431"
                       Height="27"
                       Margin="203,18,154.8,18.2"
                       FontSize="22"
                       Style="{StaticResource TextBlockStyle}"
                       TextAlignment="Center">
                <Run Text="Version: " />
                <Run Text="{Binding Path=Version, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
            </TextBlock>

            <TextBlock Grid.Row="2"
                       Width="431"
                       Height="27"
                       Margin="203,17.8,154.8,18.4"
                       FontSize="22"
                       Foreground="#006600"
                       Style="{StaticResource TextBlockStyle}"
                       TextAlignment="Center">
                <Run Text="Instrument: " />
                <Run Text="{Binding Path=InstrumentName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
            </TextBlock>

            <TextBlock Grid.Row="3"
                       Width="322"
                       Height="44"
                       MaxWidth="350"
                       Margin="233,9.6,233.8,9.6"
                       FontSize="12"
                       Style="{StaticResource TextBlockStyle}"
                       TextWrapping="WrapWithOverflow">
                Matthew Monroe, Danny Orton, Brian LaMarche, Tom Metz, Gary Kiebel, Ron Moore, Francisco Chavez, Gordon Anderson, and Richard Smith
            </TextBlock>

            <TextBlock Grid.Row="4"
                       Width="769"
                       Height="31"
                       Margin="10,0,9.8,2.6"
                       VerticalAlignment="Bottom"
                       FontSize="14"
                       FontWeight="Bold"
                       Style="{StaticResource TextBlockStyle}"
                       Text="{Binding Path=LastLoggedItem,
                                      Mode=OneWay,
                                      UpdateSourceTrigger=PropertyChanged,
                                      FallbackValue='Sample Text'}"
                       TextAlignment="Center"
                       TextWrapping="WrapWithOverflow" />
            <TextBlock Grid.Row="5"
                       Margin="0,2.4,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="12"
                       IsEnabled="False"
                       Text="{Binding Path=LogFilePath,
                                      Mode=OneWay,
                                      UpdateSourceTrigger=PropertyChanged,
                                      FallbackValue='Log file path'}"
                       TextWrapping="Wrap" />
        </Grid>
    </Border>
</Window>
