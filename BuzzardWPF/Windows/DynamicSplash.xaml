<Window x:Class="BuzzardWPF.Windows.DynamicSplash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Background="{x:Null}"
		ResizeMode="CanMinimize"
		ShowInTaskbar="True"
		SnapsToDevicePixels="True"
		Topmost="False"
		UseLayoutRounding="True"        
		WindowStartupLocation="CenterScreen"
		WindowStyle="None"
        Title="DynamicSplash" 
		Height="500" Width="809">

    <Window.Resources>
        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Calibri"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="20 10"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="Maroon" 
			BorderThickness="10"
			Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="63*"/>
                <RowDefinition Height="63*"/>
                <RowDefinition Height="63*"/>
                <RowDefinition Height="44*"/>
                <RowDefinition Height="18*"/>
            </Grid.RowDefinitions>

            <Image Source="{Binding Path=LogoImageSource, 
									Mode=OneWay, 
									UpdateSourceTrigger=PropertyChanged, 
									FallbackValue={StaticResource LogoImageSource}}" Margin="0,0,-0.2,0"/>
            <TextBlock Grid.Row="1" 
					   Style="{StaticResource TextBlockStyle}"
					   FontSize="22" Margin="353,18,352.8,18.2" Height="27" Width="83">
				<Run Text="Version: "/>
				<Run Text="{Binding Path=Version, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
            </TextBlock>

            <TextBlock Grid.Row="2" 
					   Style="{StaticResource TextBlockStyle}"
					   FontSize="22"
					   Foreground="#006600" Margin="337,17.8,335.8,18.4" Height="27" Width="116">
				<Run Text="Instrument: "/>
				<Run Text="{Binding Path=InstrumentName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
            </TextBlock>

            <TextBlock Grid.Row="3"
					   Style="{StaticResource TextBlockStyle}"
					   MaxWidth="350" 
					   TextWrapping="WrapWithOverflow"
					   FontSize="12" Margin="233,9.6,233.8,9.6" Height="44" Width="322">
				Brian LaMarche, Danny Orton, Tom Metz, Gary Kiebel, Matthew Monroe, Ron Moore, Francisco Chavez, Gordon Anderson, Richard Smith
            </TextBlock>

            <TextBlock Grid.Row="4"
					   Style="{StaticResource TextBlockStyle}"
					   TextWrapping="WrapWithOverflow"
					   FontWeight="Bold"
					   Text="{Binding Path=LastLoggedItem, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, FallbackValue='Sample Text'}" FontSize="14" Margin="10,0,9.8,2.6" Height="31" Width="769" VerticalAlignment="Bottom" TextAlignment="Center"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,2.4,0,0" 
                       Grid.Row="5" 
                       TextWrapping="Wrap" 
                       Text="{Binding Path=LogFilePath, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, FallbackValue='Log file path'}" FontSize="12" VerticalAlignment="Top" IsEnabled="False"/>
        </Grid>
    </Border>
</Window>
